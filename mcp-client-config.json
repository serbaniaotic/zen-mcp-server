{
  "mcpServers": {
    "zen": {
      "command": "docker",
      "args": ["exec", "-i", "zen-mcp-server", "python", "server.py"],
      "env": {
        "GEMINI_API_KEY": "YOUR_GEMINI_KEY",
        "OPENAI_API_KEY": "YOUR_OPENAI_KEY",
        "NEW_RELIC_API_KEY": "YOUR_NEWRELIC_KEY",
        "NEW_RELIC_ACCOUNT_ID": "YOUR_ACCOUNT_ID",
        "DEFAULT_MODEL": "auto",
        "LOG_LEVEL": "INFO"
      }
    },
    "newrelic": {
      "command": "docker",
      "args": ["exec", "-i", "newrelic-mcp-server", "newrelic-mcp"],
      "env": {
        "NEW_RELIC_API_KEY": "YOUR_NEWRELIC_KEY",
        "NEW_RELIC_ACCOUNT_ID": "YOUR_ACCOUNT_ID"
      }
    },
    "context7": {
      "command": "docker",
      "args": ["exec", "-i", "context7-mcp-server", "context7-mcp"]
    }
  }
}
