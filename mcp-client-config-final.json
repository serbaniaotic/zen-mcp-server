{
  "mcpServers": {
    "zen": {
      "command": "docker",
      "args": ["run", "--rm", "-i", "--network", "host", "-e", "GEMINI_API_KEY=${GEMINI_API_KEY}", "-e", "OPENAI_API_KEY=${OPENAI_API_KEY}", "-e", "NEW_RELIC_API_KEY=${NEW_RELIC_API_KEY}", "-e", "NEW_RELIC_ACCOUNT_ID=${NEW_RELIC_ACCOUNT_ID}", "-e", "DEFAULT_MODEL=auto", "-e", "LOG_LEVEL=INFO", "-e", "PYTHONUNBUFFERED=1", "-e", "PYTHONPATH=/app", "zen-mcp-server:latest", "python", "server.py"],
      "env": {
        "GEMINI_API_KEY": "YOUR_GEMINI_KEY",
        "OPENAI_API_KEY": "YOUR_OPENAI_KEY",
        "NEW_RELIC_API_KEY": "YOUR_NEWRELIC_KEY",
        "NEW_RELIC_ACCOUNT_ID": "YOUR_ACCOUNT_ID"
      }
    },
    "newrelic": {
      "command": "npx",
      "args": ["-y", "@cloudbring/newrelic-mcp"],
      "env": {
        "NEW_RELIC_API_KEY": "YOUR_NEWRELIC_KEY",
        "NEW_RELIC_ACCOUNT_ID": "YOUR_ACCOUNT_ID"
      }
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@iflow-mcp/context7-mcp"]
    }
  }
}
